<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayoutSUM"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SummaryFragment">

    <LinearLayout
        android:id="@+id/usernameLayoutSUM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/usernameTextSUM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="UNKNOWN"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/summaryLayoutSUM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/gamesNumLayoutSUM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/gameNumTopLayoutSUM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gameNumText1SUM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="20dp"
                    android:text="Number of games:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/gameNumText2SUM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="UNKNOWN"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gameNumBottomLayoutSUM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/gameNumButtonSUM"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#2C81DB"
                    android:backgroundTintMode="src_in"
                    android:text="Games"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="3dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/DLCNumLayoutSUM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/DLCNumTopLayoutSUM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/DLCNumText1SUM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="20dp"
                    android:text="Number of DLC's:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/DLCNumText2SUM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="UNKNOWN"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/DLCNumBottomLayoutSUM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/DLCNumButtonSUM"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#2C81DB"
                    android:backgroundTintMode="src_in"
                    android:text="Expansions"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="3dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/syncLayoutSum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/syncTopLayoutSUM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/syncText1SUM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="20dp"
                    android:text="Date of last synchronize:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/syncText2SUM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="UNKNOWN"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/syncBottomLayoutSUM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/syncButtonSUM"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#2C81DB"
                    android:backgroundTintMode="src_in"
                    android:text="Synchronize"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="3dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/exitLayoutSUM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/exitWoClearSUM"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:backgroundTint="#2C81DB"
                android:backgroundTintMode="src_in"
                android:onClick="justExit"
                android:text="Exit"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:strokeColor="@color/black"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/exitWClearSUM"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:backgroundTint="#2C81DB"
                android:backgroundTintMode="src_in"
                android:onClick="clearAll"
                android:text="Clear all"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:strokeColor="@color/black"
                app:strokeWidth="3dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/commitClearAllLayoutSUM"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/commitTextViewSUM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Do you really want clear all data?"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:id="@+id/commitButtonsLayoutSUM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/yesCommitButtonSUM"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:backgroundTint="#2C81DB"
                android:backgroundTintMode="src_in"
                android:text="Yes"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:strokeColor="@color/black"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/noCommitButtonSUM"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:backgroundTint="#2C81DB"
                android:backgroundTintMode="src_in"
                android:text="No"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:strokeColor="@color/black"
                app:strokeWidth="3dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>